<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.teester.mapquestions.QuestionFragment"
                android:paddingLeft="36dp"
                android:paddingRight="36dp"
                android:paddingBottom="36dp"
                android:paddingTop="108dp"
                android:background="#333333">

    <RelativeLayout
        android:id="@+id/question_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/question_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/wheelchair"
            android:paddingBottom="24dp"
            android:paddingTop="56dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="#fff"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <ImageView
            android:id="@+id/question_imageView"
            android:contentDescription="@string/icon_content_description"
            android:layout_width="36dp"
            android:layout_height="44dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_fast_food"
            android:tint="@color/white"
            android:paddingTop="8dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_relative_layout"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary">
        <Button
            android:id="@+id/answer_yes"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="@string/yes"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:drawableTop="@drawable/ic_yes"
            android:drawablePadding="5dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"/>
        <Button
            android:id="@+id/answer_no"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="@string/no"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:drawableTop="@drawable/ic_no"
            android:drawablePadding="5dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"/>

        <Button
            android:id="@+id/answer_unsure"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="@string/unsure"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:drawableTop="@drawable/ic_unsure"
            android:drawablePadding="5dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"/>
    </LinearLayout>
</RelativeLayout>