<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#333333">

    <TextView
        android:id="@+id/question_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large"
        android:background="@drawable/rounded_top"
        android:backgroundTint="@color/colorAccent"
        android:gravity="center"
        android:minHeight="128dp"
        android:padding="32dp"
        android:text="@string/wheelchair"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/text_color_light"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="@string/wheelchair"/>

    <TextView
        android:id="@+id/question_previous_answers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_none"
        android:text="@string/others_have_answered_this_question"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/text_color_light"
        app:layout_constraintBottom_toTopOf="@+id/answer_no"
        app:layout_constraintLeft_toLeftOf="@+id/question_textview"
        app:layout_constraintRight_toRightOf="@+id/question_textview"/>

    <ImageView
        android:id="@+id/question_imageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="@dimen/margin_small"
        android:contentDescription="@string/icon_content_description"
        android:src="@drawable/ic_fast_food"
        android:tint="@color/image_color_light"
        app:layout_constraintLeft_toLeftOf="@+id/question_textview"
        app:layout_constraintRight_toRightOf="@+id/question_textview"
        app:layout_constraintTop_toTopOf="@+id/question_textview"
        tools:tint="@color/white"/>

    <Button
        android:id="@+id/answer_yes"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_none"
        android:layout_weight="1"
        android:background="@drawable/rounded_bottom_left"
        android:backgroundTint="@color/colorPrimary"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/ic_yes"
        android:paddingBottom="24dp"
        android:paddingTop="24dp"
        android:text="@string/yes"
        android:textColor="@color/text_color_light"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="@+id/question_textview"
        app:layout_constraintRight_toLeftOf="@+id/answer_no"
        app:layout_constraintTop_toBottomOf="@+id/question_textview"/>

    <Button
        android:id="@+id/answer_no"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_none"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/ic_no"
        android:paddingBottom="24dp"
        android:paddingTop="24dp"
        android:text="@string/no"
        android:textColor="@color/text_color_light"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/answer_yes"
        app:layout_constraintRight_toLeftOf="@+id/answer_unsure"
        app:layout_constraintTop_toBottomOf="@+id/question_textview"/>

    <Button
        android:id="@+id/answer_unsure"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_none"
        android:layout_weight="1"
        android:background="@drawable/rounded_bottom_right"
        android:backgroundTint="@color/colorPrimary"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/ic_unsure"
        android:paddingBottom="24dp"
        android:paddingTop="24dp"
        android:text="@string/unsure"
        android:textColor="@color/text_color_light"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/answer_no"
        app:layout_constraintRight_toRightOf="@+id/question_textview"
        app:layout_constraintTop_toBottomOf="@+id/question_textview"/>

</android.support.constraint.ConstraintLayout>